generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id             String         @id @default(uuid())
  slug           String         @unique
  title          String
  type           String
  district       String
  address        String?
  area_m2        Decimal?       @db.Decimal
  bedrooms       Int?
  bathrooms      Int?
  parking_spaces Int?
  price_usd      Decimal?       @db.Decimal
  price_sol      Decimal?       @db.Decimal
  description    String?
  common_areas   String?
  main_image_key String?
  status         String         @default("disponible")
  created_at     DateTime       @default(now())
  updated_at     DateTime       @default(now())
  files          PropertyFile[]

  @@index([district], map: "idx_property_district")
  @@index([slug], map: "idx_property_slug")
  @@index([status], map: "idx_property_status")
  @@index([type], map: "idx_property_type")
}

model PropertyFile {
  id            String    @id @default(uuid())
  property_id   String
  file_type     String
  object_key    String
  original_name String?
  size_bytes    BigInt?
  created_at    DateTime  @default(now())
  property      Property  @relation(fields: [property_id], references: [id], onDelete: Cascade)

  @@index([property_id], map: "idx_propertyfile_property_id")
}

model User {
  id         String   @id @default(uuid())
  username   String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@index([username], map: "idx_user_username")
}
